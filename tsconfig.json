{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@fabelio/first/*": ["projects/first/src/*"],
      "@fabelio/domains/*": ["src/fabelio/*"],
      "@fabelio/core/*": ["src/core/*"],
      "@fabelio/shared/*": ["src/shared/*"],
    }
  }
}
